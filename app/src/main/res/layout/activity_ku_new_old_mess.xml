<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ku_new_old_mess"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.storehouse.wanyu.activity.Ku.KuNewOldMessActivity">

    <RelativeLayout
        android:id="@+id/title_rl"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/color_ffffff">

        <ImageView
            android:id="@+id/back_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/newold_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            android:textColor="@color/color_0e3247"
            android:textSize="16sp" />
    </RelativeLayout>

    <!--申请部门-->
    <RelativeLayout
        android:id="@+id/cg_bumen_rl"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/title_rl"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/cg_bumen_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apply_bumen"
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/cg_bumen_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@id/cg_bumen_tv"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />
    </RelativeLayout>

    <!--申请人-->
    <RelativeLayout
        android:id="@+id/cg_person_rl"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/cg_bumen_rl"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/cg_person_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apply_person"
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/cg_person_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@id/cg_person_tv"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />
    </RelativeLayout>

    <!--物品名称-->
    <RelativeLayout
        android:id="@+id/cg_name_rl"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/cg_person_rl"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/cg_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apply_name"
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/cg_name_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@id/cg_name_tv"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />
    </RelativeLayout>

    <!--物品数量-->
    <RelativeLayout
        android:id="@+id/cg_num_rl"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/cg_name_rl"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/cg_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="物品数量"
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/cg_num_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@id/cg_num_tv"
            android:inputType="number"
            android:maxLength="5"
            android:text=""
            android:background="@null"
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />
    </RelativeLayout>

    <!--申请时间-->
    <RelativeLayout
        android:id="@+id/cg_time_rl"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/cg_num_rl"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/cg_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请时间"
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/cg_time_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@id/cg_time_tv"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />
    </RelativeLayout>


    <!--所在位置-->
    <RelativeLayout
        android:id="@+id/cg_location_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cg_time_rl"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="24dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/cg_location_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apply_weizhi"
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/cg_location_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@id/cg_location_tv"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="二楼"
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />
    </RelativeLayout>

    <!--备注说明-->
    <RelativeLayout
        android:id="@+id/cg_beizhu_rl"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/cg_location_rl"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/cg_beizhu_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apply_beizhu"
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/cg_beizhu_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@id/cg_beizhu_tv"
            android:ellipsize="end"
            android:maxLines="4"
            android:text=""
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />
    </RelativeLayout>

    <!--同意换新-->
    <TextView
        android:id="@+id/agree_btn"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/tongyi_bg"
        android:gravity="center"
        android:text="确认换新"
        android:textColor="@color/color_ffffff"
        android:textSize="12sp"
        android:visibility="gone" />
</RelativeLayout>
