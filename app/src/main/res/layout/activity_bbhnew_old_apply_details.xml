<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bbhnew_old_apply_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f2f2f2"
    tools:context="com.storehouse.wanyu.activity.AllBBHDetailsActivity.BBHNewOldApplyDetailsActivity">
    <RelativeLayout
        android:id="@+id/title_rl"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/color_ffffff">

        <ImageView
            android:id="@+id/back_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/apply_newold"
            android:textColor="@color/color_0e3247"
            android:textSize="16sp" />
    </RelativeLayout>

    <!--申请部门-->
    <RelativeLayout
        android:id="@+id/cg_bumen_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_rl"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/cg_bumen_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apply_bumen"
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/cg_bumen_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@id/cg_bumen_tv"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="软件部"
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />
    </RelativeLayout>

    <!--申请人-->
    <RelativeLayout
        android:id="@+id/cg_person_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cg_bumen_rl"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/cg_person_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apply_person"
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/cg_person_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@id/cg_person_tv"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="我很好"
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />
    </RelativeLayout>

    <!--物品名称-->
    <RelativeLayout
        android:id="@+id/cg_name_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cg_person_rl"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/cg_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apply_name"
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/cg_name_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@id/cg_name_tv"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="电脑"
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />
    </RelativeLayout>

    <!--所在位置-->
    <RelativeLayout
        android:id="@+id/cg_location_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cg_name_rl"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/cg_location_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apply_weizhi"
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/cg_location_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@id/cg_location_tv"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="二楼"
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />
    </RelativeLayout>

    <!--备注说明-->
    <RelativeLayout
        android:id="@+id/cg_beizhu_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cg_location_rl"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/cg_beizhu_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apply_beizhu"
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/cg_beizhu_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@id/cg_beizhu_tv"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="xxxxxxxxxxxxx"
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />
    </RelativeLayout>

    <!--备注：注意只有管理员身份才显示,如果不是管理不显示-->
    <RelativeLayout
        android:id="@+id/cg_beizhu_edit_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cg_beizhu_rl"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/cg_beizhu_edit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apply_beizhu2"
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/cg_beizhu_edit_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@id/cg_beizhu_edit_tv"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:maxLines="2"
            android:text="xxxxxxxxxxxxx"
            android:ellipsize="end"
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />
    </RelativeLayout>

