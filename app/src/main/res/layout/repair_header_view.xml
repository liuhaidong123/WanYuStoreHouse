<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--申请部门-->
    <RelativeLayout
        android:id="@+id/cg_bumen_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_rl"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/cg_bumen_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apply_bumen"
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/cg_bumen_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@id/cg_bumen_tv"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />
    </RelativeLayout>

    <!--申请人-->
    <RelativeLayout
        android:id="@+id/cg_person_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cg_bumen_rl"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/cg_person_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apply_person"
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/cg_person_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@id/cg_person_tv"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />
    </RelativeLayout>

    <!--物品名称-->
    <RelativeLayout
        android:id="@+id/cg_name_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cg_person_rl"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/cg_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apply_name"
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/cg_name_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@id/cg_name_tv"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />
    </RelativeLayout>

    <!--物品数量-->
    <RelativeLayout
        android:id="@+id/cg_num_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cg_name_rl"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/cg_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="物品数量"
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/cg_num_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@id/cg_num_tv"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />
    </RelativeLayout>

    <!--资产编码-->
    <RelativeLayout
        android:id="@+id/zichan_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cg_num_rl"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/bianma_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="资产编码"
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@id/bianma_tv">

            <TextView
                android:id="@+id/bianma_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLength="200"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/color_373a41"
                android:textSize="12sp" />

        </RelativeLayout>
    </RelativeLayout>

    <!--维修类型-->
    <RelativeLayout
        android:id="@+id/weixiu_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/zichan_rl"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/weixiu_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="维修类型"
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@id/weixiu_tv">

            <TextView
                android:id="@+id/weixiu_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLength="200"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/color_373a41"
                android:textSize="12sp" />

        </RelativeLayout>
    </RelativeLayout>

    <!--所在位置-->
    <RelativeLayout
        android:id="@+id/cg_location_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/weixiu_rl"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="24dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/cg_location_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/location"
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/cg_location_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@id/cg_location_tv"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="所在位置"
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />
    </RelativeLayout>

    <!--备注说明-->
    <RelativeLayout
        android:id="@+id/cg_beizhu_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cg_location_rl"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/cg_beizhu_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apply_beizhu"
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/cg_beizhu_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@id/cg_beizhu_tv"
            android:ellipsize="end"
            android:maxLines="4"
            android:text=""
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />
    </RelativeLayout>

    <!--申请时间-->
    <RelativeLayout
        android:id="@+id/time_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cg_beizhu_rl"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="申请时间"
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/time_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@id/time_tv"
            android:ellipsize="end"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />
    </RelativeLayout>
    <!--配件增加删除-->
    <RelativeLayout
        android:id="@+id/add_delete_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_rl"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/parts_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="配件明细"
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="删除"
            android:textColor="@color/color_22b2e7"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/delete"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="增加"
            android:textColor="@color/color_22b2e7"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_l"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@+id/add_delete_rl"
        android:layout_marginTop="24dp"
        android:background="#e5e5e5">

        <LinearLayout
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:background="#f3f5f6"
            android:gravity="center">

            <TextView
                android:id="@+id/select_state"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/bumen_box"
                android:visibility="gone" />

        </LinearLayout>

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="#f3f5f6"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLength="10"
            android:maxLines="1"
            android:text="资产名称"
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/xinghao_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="#f3f5f6"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLength="10"
            android:maxLines="1"
            android:text="型号"
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/num_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="#f3f5f6"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLength="10"
            android:maxLines="1"
            android:text="数量"
            android:textColor="@color/color_373a41"
            android:textSize="12sp" />

    </LinearLayout>


</LinearLayout>